            <div class="form-group">
                <label asp-for="StTenSinhVien" class="control-label"></label>
                <input asp-for="StTenSinhVien" class="form-control" />
                <span asp-validation-for="StTenSinhVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StMaKhoa" class="control-label"></label>
                <select asp-for="StMaKhoa" class="form-control" asp-items="ViewBag.StMaKhoa"></select>
            </div>
            <div class="form-group">
                <label asp-for="InSoLanBiPhat" class="control-label"></label>
                <input asp-for="InSoLanBiPhat" class="form-control" />
