@model QL_ThuVien.Models.TblSinhVien

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Thêm Mới Sinh Viên</h1>
<style>
    .mycolor {
        color: #ff0000;
    }
</style>
<p class="mycolor">Thông tin của Sinh Viên</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
