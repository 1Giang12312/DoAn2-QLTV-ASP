@model IEnumerable<QL_ThuVien.Models.TblTaiKhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Quản lý tài khoản</h1>


<div class="header-sub-title">
    <nav class="breadcrumb breadcrumb-dash">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="mdi mdi-home"></i>Trang chủ</a>
        <a asp-area="Admin" asp-controller="TaiKhoan" asp-action="Index" class="breadcrumb-item"> Danh sách tài khoản</a>
        <span class="breadcrumb-item active">Chỉnh sửa tài khoản</span>
    </nav>
</div>

<div class="btn-group " style="float:right;padding-right:26px;">
    <div class="col-lg-12 ">
        <a asp-action="Create" type="button" style="max-width:250px;max-height:40px;" class="btn btn-inverse-warning btn-fw">Thêm tài khoản+</a>
    </div>
</div>

<div class="btn-group ">
    <div class="col-lg-12 ">
        <form class="d-flex" role="search">
            <input style="max-width:250px;max-height:40px;" class="form-control me-2" type="search" placeholder="Bạn muốn tìm gì?" aria-label="Search">
            <button style="max-width:100px;max-height:35px;" class="btn btn-outline-success" type="submit">Tìm</button>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StMatKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StQuyenHan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BiTrangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaNgayDangNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaNgayTao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.StMatKhau)
            </td>
            <td class="text-danger">
                @Html.DisplayFor(modelItem => item.StQuyenHan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BiTrangThai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaNgayDangNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaNgayTao)
            </td>
            <td>

                <a class="btn btn-outline-success btn-icon-text" asp-action="Edit" asp-route-id="@item.StMaSinhVien"> Cập nhật <i class="mdi mdi-file-check btn-icon-append"></i></a> |
                <a class="btn btn-outline-primary btn-icon-text" asp-action="Details" asp-route-id="@item.StMaSinhVien"> <i class="mdi mdi-file-check btn-icon-prepend"></i> Chi tiết</a> |
                <a class="btn btn-outline-danger btn-icon-text" asp-action="Delete" asp-route-id="@item.StMaSinhVien">  <i class="mdi mdi-alert btn-icon-prepend"></i> Xóa</a>

            </td>
     


        </tr>
        }
    </tbody>
</table>
