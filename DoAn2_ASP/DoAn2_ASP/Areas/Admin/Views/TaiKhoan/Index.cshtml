@model IEnumerable<DoAn2_ASP.Models.TblTaiKhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tài khoản</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Họ tên
            </th>
            <th>
                Khoa
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StMaSinhVienNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaNgayDangNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaNgayTao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BiTrangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InMaQuyenHanNavigation)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StMaSinhVienNavigation.StTenSinhVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StMaSinhVienNavigation.StMaKhoaNavigation.StTenKhoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StMaSinhVienNavigation.StMaSinhVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaNgayDangNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaNgayTao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BiTrangThai)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.InMaQuyenHanNavigation.StGhiChu)
            </td>



            <td>
                <a asp-action="Edit" asp-route-id="@item.InMaTaiKhoan">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.InMaTaiKhoan">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.InMaTaiKhoan">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
