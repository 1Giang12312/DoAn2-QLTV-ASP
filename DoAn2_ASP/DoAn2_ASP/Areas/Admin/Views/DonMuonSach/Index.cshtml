@model IEnumerable<DoAn2_ASP.Models.TblDonMuonSach>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Danh sách đơn mượn</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Họ tên
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StMaSinhVienNavigation)
            </th>
            <th>
                Khoa
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaNgayMuon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaNgayTra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BiTrangThai)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StMaSinhVienNavigation.StTenSinhVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StMaSinhVienNavigation.StMaSinhVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StMaSinhVienNavigation.StMaKhoaNavigation.StTenKhoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaNgayMuon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaNgayTra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BiTrangThai)
            </td>


            <td>
                <a asp-action="Details" asp-route-id="@item.StMaDonMuon">Trả sách</a>

            </td>
        </tr>
}
    </tbody>
</table>
