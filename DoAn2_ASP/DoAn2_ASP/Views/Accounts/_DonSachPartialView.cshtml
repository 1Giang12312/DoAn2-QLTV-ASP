@model List<TblSinhVien>
@if (Model != null && Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                         class="rounded-circle img-fluid" style="width: 150px;">
                    <h5 class="my-3">@item.StTenSinhVien)</h5>
                    <p class="text-muted mb-1">@item.StGmail)</p>
                    <p class="text-muted mb-4">@item.StSoDienThoai)</p>
                    <div class="d-flex justify-content-center mb-2">
                        <button type="button">Đổi mật khẩu</button>
                        <button type="button">Sách đang mượn</button>
                        <button type="button">Sách đã trả</button>
                        <button type="button">Đổi mật khẩu</button>
                        <hr>
                    </div>
                </div>
            </div>
            <div class="card mb-4 mb-lg-0">
            </div>
        </div>
    }
}

else
{
    <p>Chưa có đơn sách!</p>
}
