@model DoAn2_ASP.ModelView.ChangePasswordVM
<main class="main-content">
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 pt-10 pt-lg-0">
                    <form asp-action="ChangePassword" method="post" asp-controller="Accounts">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="login-form">
                            <h1 class="login-title">Đổi mật khẩu</h1>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Nhập mật khẩu hiện tại</label>
                                    <input  asp-for="PasswordNow" type="password" >
                                    <span asp-validation-for="PasswordNow" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Nhập mật khẩu mới</label>
                                    <input  asp-for="Password" type="password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Nhập lại mật khẩu mới</label>
                                    <input asp-for="ConfirmPassword" type="password" >
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <button>Đổi mật khẩu</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

